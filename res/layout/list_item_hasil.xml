<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_item_background">

    <!-- TextView untuk Nama Nasabah -->
    <TextView
        android:id="@+id/textNamaNasabah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nama Nasabah"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

    <!-- TextView untuk Hasil WP -->
    <TextView
        android:id="@+id/textHasilWP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil WP"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>
</LinearLayout>
